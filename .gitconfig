
[user]
	name = Yves Bonjour
	email = yves.bonjour@rethinc.ch

[core]
	editor = vim
	excludesfile = /Users/yvbo/.gitignore_global
	autocrlf = input

[alias]
	s = status
	c = commit
	a = add
	d = diff
	p = pull

[pull]
	rebase = true
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/Sourcetree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
